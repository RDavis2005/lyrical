<form action="/songs" method="post" multipart=true>
    <div class="form-group">
        <input class="form-control" type="text" name="title" placeholder="Song Title">
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="author" placeholder="Author">
    </div>
    <div class="form-group">
        <textarea class="form-control" name="lyrics" placeholder="Enter Lyrics"></textarea>
    </div>
    <input type="submit" value="Save">
</form>